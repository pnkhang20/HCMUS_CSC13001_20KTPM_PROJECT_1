                                   Margin="40, 20, 20, 0"/>
                        </StackPanel>
                    </Grid>-->
                    <Grid>
                        <Ellipse Width="230" Height="230" Margin="0 -130 -90 0" HorizontalAlignment="Right">
                            <Ellipse.Fill>
                                <LinearGradientBrush StartPoint="1,0" EndPoint="0,1">
                                    <GradientStop Color="#FBD5A8" Offset="0" />
                                    <GradientStop Color="#FDB89B" Offset="1" />
                                </LinearGradientBrush>
                            </Ellipse.Fill>
                        </Ellipse>

                        <Icon:PackIconMaterial Kind="Shopping" Margin="0 0 25 50" Width="50" Height="60" Foreground="#ffffff" HorizontalAlignment="Right" VerticalAlignment="Center"/>

                        <StackPanel Margin="20 0 0 20" VerticalAlignment="Bottom">
                            <TextBlock Text="New Orders" Foreground="#e9e9e9" FontSize="25"
                                   Margin="0, 10, 0, 0"/>
                            <TextBlock Foreground="#ffffff" 
                                       FontSize="25" 
                                       FontWeight="SemiBold">
                                <Run Text="{Binding TotalOrder}" FontSize="30" d:Text="25"/>
                                 orders / week
                            </TextBlock>
                        </StackPanel>
                    </Grid>
                </Border>
                </WrapPanel>
           
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="Almost Out Of Stock"
                   Foreground="White"
                   FontSize="28"
                   HorizontalAlignment="Left"
                   Margin="0, 10, 0, 10"/>
                      
                        <ListView x:Name="listProductsView" Grid.Row="1" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Padding="10, 10, 0, 0"  ItemsSource="{Binding Books}"
                         PreviewMouseWheel="OnPreviewMouseWheel"
                         ScrollViewer.CanContentScroll="True" 
                        >
                           
                            <ListView.ItemTemplate>
                                <DataTemplate>

                                    <Border HorizontalAlignment="Center"
                                CornerRadius="10"
                                BorderThickness="1" BorderBrush="DarkOrange"
                                Width="150"
                                Height="230"                                
                                Background="#22202f">
                                    <StackPanel Orientation="Vertical">
                                        <DockPanel Height="150">
                                            <Border Height="140"
                                                Padding="0 0 0 0"                                                
                                                CornerRadius="10"
                                                BorderThickness="1" BorderBrush="Gray">
                                                <Border.Background>
                                                    <ImageBrush Stretch="Uniform"                                                             
                                                            ImageSource="{Binding Cover, UpdateSourceTrigger=PropertyChanged, IsAsync=True}"  RenderOptions.BitmapScalingMode="HighQuality"/>
                                                </Border.Background>
                                            </Border>
                                        </DockPanel>
                                        <StackPanel VerticalAlignment="Center" Margin="0 0">
                                                <TextBlock FontSize="16" FontWeight="DemiBold" TextAlignment="Center" RibbonTwoLineText.HasTwoLines="True"  TextWrapping="Wrap" HorizontalAlignment="Center" Foreground="White" Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" />
                                                <TextBlock FontSize="15" TextAlignment="Center" Width="90" Foreground="White">                                            
                                            <Run Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}" d:Text="20" />
                                            <Run Text="pieces"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </StackPanel>
    </Border>

    </DataTemplate>
                                
                                
                            </ListView.ItemTemplate>
                            <ListView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ListView.ItemsPanel>
                        </ListView>
                     
                    </Grid>
