        <Grid Margin="25,20,25,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition ></RowDefinition>
              
            </Grid.RowDefinitions>
            <TextBlock Text="Home"
                   Foreground="White"
                   FontSize="28"
                   HorizontalAlignment="Left"
                   Margin="0, 0, 0, 20"/>
            <ScrollViewer Background="#394867" Margin="50,0,20,20" Grid.Row="1">
                <StackPanel>
                <WrapPanel>
                <Border Width="300"
                    Height="150"
                    Margin="10"
                        >

                    <Border.Background>
                        <LinearGradientBrush StartPoint="0, 0" EndPoint="1, 2">
                            <GradientStop Color="#827BFF" Offset="0.0"></GradientStop>
                            <GradientStop Color="#D9B5FF" Offset="1"></GradientStop>
                        </LinearGradientBrush>
                    </Border.Background>

                    <Border.Clip>
                                <RectangleGeometry RadiusX="15" RadiusY="15" Rect="0,0,291,140"/>
                            </Border.Clip>

                    <!--<Grid>
                        <StackPanel>
                            <TextBlock Text="Total sales"
                                   Foreground="White"
                                   FontSize="40"
                                   Margin="20, 10, 10, 0"/>
